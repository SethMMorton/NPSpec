  pages = {1--24},
  timestamp = {2010.07.19},
  title = {Radiative Decay Engineering: Biophysical and Biomedical Applications},
  url = {http://www.sciencedirect.com/science/article/B6W9V-45BC6JY-2H/2/5a11087aad3f868b8423605b688f3276},
  volume = {298},
